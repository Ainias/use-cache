{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2017",
    "alwaysStrict": true,
    "lib": ["es5", "es2015.promise", "dom", "es2015", "es6", "es2017"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
